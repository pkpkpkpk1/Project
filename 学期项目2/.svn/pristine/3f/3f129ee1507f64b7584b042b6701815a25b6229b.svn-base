/* 1.顶部*/


/* 顶部外层容器 */

.topbar {
    height: 28px;
    background-color: #101010;
}


/* 顶部内层容器 */

.topbar .container {
    height: 28px;
    background-color: #101010;
}


/* 里面的p标签 */

.topbar .container p {
    height: 28px;
    line-height: 28px;
    color: #f1f1f1;
}


/* 第一个p标签 */

.topbar .container p:first-child {
    text-indent: 210px;
}


/* p标签下的第一个a标签 */

.topbar .container p:first-child a {
    color: #fff;
    text-decoration: none;
}


/*  第二个p标签*/

.topbar .container p:nth-child(2) {
    margin-right: 10px;
}


/* 第二个p标签下面的标题和注册按钮 */

.topbar .container p:nth-child(2) .title,
.topbar .container p:nth-child(2) .register {
    color: #f67000;
}


/* 第二个p标签下的登录按钮 */

.topbar .container p:nth-child(2) .login {
    color: rgb(201, 214, 18);
}


