/* 分级导航 */

.nav .category-menu {
    height: 30px;
    margin-top: 15px;
}

.nav .category-menu .left-logo {
    width: 200px;
    height: 30px;
    position: relative;
}

.nav .category-menu .left-logo img {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 123px;
}

.nav .category-menu ul {
    width: 1000px;
    height: 30px;
}

.nav .category-menu ul li {
    float: left;
    height: 30px;
    line-height: 30px;
    width: 80px;
    color: #333;
    font-size: 14px;
    text-align: center;
    font-weight: 700;
}


/* 3.===========分类导航和banner=========== */


/* 大盒子 */

.menu {
    height: 430px;
}


/* 左边导航 */

.menu .sideMenu {
    height: 430px;
    width: 217px;
}


/* 左边导航的大盒子 */

.menu .sideMenu ul {
    width: 217px;
    height: 430px;
    background-color: #f3f3f3;
}


/* 导航大盒子的子类 */

.menu .sideMenu ul li {
    height: 30px;
    line-height: 30px;
    width: 200px;
    text-align: center;
}


/* 导航的超链接 */

.menu .sideMenu ul li a {
    color: #353535;
    text-decoration: none;
}


/* 访问超连接的颜色 */

.menu .sideMenu ul li a:hover {
    color: #ff6700;
}


/* 访问二级导航是的颜色 */

.menu .sideMenu ul li:hover {
    background-color: #fff;
}


/* 访问二级导航子类的颜色 */

.menu .sideMenu ul li:hover a {
    color: #ff6700;
}


/* 一级导航的盒子 */

.menu .sideMenu ul li .title {
    width: 217px;
    height: 30px;
    line-height: 30px;
}


/* 访问一级二级导航的图标 */

.menu .sideMenu ul li:hover .title {
    background-color: #fff;
    position: absloute;
    z-index: 100;
}

.menu .sideMenu ul li:hover .subMenu {
    display: block;
}

.menu .sideMenu ul li .subMenu {
    position: absolute;
    left: 356px;
    top: 122px;
    border: 1px solid #ff6700;
    text-align: left;
    width: 217x;
    height: 429px;
    display: none;
}

.menu .banner {
    height: 430px;
    width: 217px;
    float: left;
}


